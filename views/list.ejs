<%- include('partials/header.ejs') -%>

<div class="box" id="heading">
  <h1><%=listTitle%></h1>
</div>

<div class="box">
  <% newListItem.forEach(element => {%>
  <form action="/delete" method="post" class="checklist">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%=element._id%>"
        onchange="this.form.submit()"
      />
      <p><%=element.name%></p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>" />
  </form>
  <% }); %>

  <form action="/" method="post" class="item">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required />

    <button type="submit" name="button" value="<%=listTitle%>">+</button>
  </form>
</div>

<%- include('partials/footer.ejs') -%>
