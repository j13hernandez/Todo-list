<%- include('header.ejs') -%>

<body>
  <div class="box" id="heading">
    <h1><%=listTitle%> To-do List</h1>
  </div>

  <div class="box">
    <% newListItem.forEach(element => {%>
    <div class="item">
      <input type="checkbox" />
      <p><%=element%></p>
    </div>
    <% }); %>

    <form action="/" method="post" class="item">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required />

      <button type="submit" name="button" value="<%=listTitle%>">+</button>
    </form>
  </div>
</body>

<%- include('footer.ejs') -%>
